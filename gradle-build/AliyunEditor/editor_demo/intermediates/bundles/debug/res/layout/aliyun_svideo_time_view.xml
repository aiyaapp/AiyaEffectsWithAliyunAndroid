<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tab_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/time_effect_none"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/aliyun_svideo_video_edit_time_none_selector"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/time_effect_slow"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/aliyun_svideo_video_edit_time_slow_selector"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/time_effect_speed_up"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/aliyun_svideo_video_edit_time_fast_selector"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/time_effect_repeat_invert"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/aliyun_svideo_video_edit_time_repeat_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_moment"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginRight="15dp"
            android:text="@string/aliyun_svideo_time_effect_moment"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time_all"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:text="@string/aliyun_svideo_time_effect_all"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>